<style>
</style>

<script>
    $(function(){
        // lpro테이블의 데이터 조회
        $("input").on("click",function(){
            $.ajax({
                url : "../0203/lprod.jsp",
                // type(method가능) : "get" 생략가능
                // data : "", 생략
                success : function(res){
                    code = "";
                    $.each(res, function(i, v){
                        code = `option value='${v.gu}'>${v.nm}</option>`;
                    })
                    $("#lprod").html(code);
                },
                error : function(xhr){
                    alert("상태 : " + xhr.status);
                },
                dataType : "json"
            })
        })
    })
</script>

</head>
