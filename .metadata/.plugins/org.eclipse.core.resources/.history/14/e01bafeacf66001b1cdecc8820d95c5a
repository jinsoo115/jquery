<script src="../js/jquery-3.5.1.min.js"></script>

<style>
</style>

<script>
    $(function(){
        // lpro테이블의 데이터 조회
        $("input").on("click", function(){
            $.ajax({
                url : "../0203/lprod.jsp",
                // type(method가능) : "get" 생략가능
                // data : "", 생략
                success : function(res){
                    code = "";
                    $.each(res, function(i, v){
                        code += `<option value='${v.gu}'>${v.nm}</option>`;
                    })
                    $("#lprod").html(code);
                },
                error : function(xhr){
                    alert("상태 : " + xhr.status);
                },
                dataType : "json"
            })
        })
        
        // lpord에서 하나를 선택하면 change이벤트
        // option의 value값을 가져온다 -val()
        $("#lprod").on("change", function(){
            //$("#lprod option:selected")
            lprod_gu = $("option:selected", this).val();
            
            $.ajax({
                url : "prodName.jsp",
                type : "post",
                data : {"gu" : lprod_gu},
                dataType : "json",
                error : function(xhr){
                    alert("상태 : " + xhr.status); //200 json 파싱 오류!!!!!!!!!, 404, 500
                },
                success : function(res){
                    code="";
                    $.each(res, function(i,v){
                        code += `<option value="${v.id}">${v.name}</option>`;
                    })
                    $("#prod").html(code);
                }
            })
            
        })
        //prod를 change하면 해당 제품의 detail를 출력
        //선택한 option의 value값을 가져온다. -val()
        //queryForList를 수행
        $("#prod").on("change",function(){
            //$("#prod option:selected")
            prod_id = $("option:selected", this).val();
            $.ajax({
                url : "prodDetail.jsp",
                type : "post",
                data : {"id" : prod_id},
                success : function(res){
                    $("#detail").html(res);
                },
                error : function(xhr){
                    alert("상태 : " + xhr.status);
                },
                dataType : "json"
            })
            
        })
    })
</script>

</head>
<body>

<div class="box">

<br><br>

<input type="button" value="확인">

<div id="result1">
    <table border="1">
        <tr>
            <td>
                <select id="lprod">
                    <!--<option value="P101">컴퓨터제품</option>
                    <option value="P102">전자제품</option>-->
                </select>
            </td>
            <td>
                <select id="prod">
                    <!--<option value="P102000001">대우 칼라 TV 25인치</option>-->
                </select>
            </td>
        </tr>
        <tr>
            <td id="detail" colspan="2">
                
            </td>
        </tr>
    </table>

</div>
</div>
